{
  "name": "components",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/components/src",
  "projectType": "library",
  "tags": ["scope:components", "type:library"],
  "targets": {
    "clean": {
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "command": "rm -rf {projectRoot}/dist"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist"],
      "cache": true,
      "defaultConfiguration": "production",
      "options": {
        "command": "npx vite build",
        "cwd": "{projectRoot}"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    }
  }
}
